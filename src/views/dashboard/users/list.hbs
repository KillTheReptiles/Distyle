<div class="datatable-container">
    <table id="users-table" class="datatable">

        <thead>
            <tr id="table-header" class="">
                <th>STATUS</th>
                <th data-priority="1">ID</th>
                <th data-priority="2">USERNAME</th>
                <th data-priority="3">FULL NAME</th>
                <th data-priority="4">EMAIL</th>
                <th data-priority="5">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td><span class="{{status}}"></span></td>
                <td>
                    {{id}}
                </td>
                <td>
                    {{username}}
                </td>
                <td>
                    {{fullname}}
                </td>
                <td>
                    {{email}}
                </td>
                <td>
                    <div class="header-tools">
                        <div class="tools">
                            <ul>
                                <li>
                                    <button>
                                        <a class="material-icons" href="/dashboard/users/add/{{id}}">add</a>
                                    </button>
                                </li>
                                <li>
                                    <button>
                                        <a class="material-icons" href="/dashboard/users/edit/{{id}}">edit</a>
                                    </button>
                                </li>
                                <li>
                                    <button>
                                        <a class="material-icons " href="/dashboard/users/delete/{{id}}">delete</a>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <!-- Optional JavaScript -->

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>


    <!--    Datatables-->
    <script src="http://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.foundation.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#users-table').DataTable();
        });
    </script>
