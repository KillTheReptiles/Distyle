<div class="container justify-content-center">
    <div class="row justify-content-center">
        <li>
            <button type="button" class="btn btn-outline-primary">
                <a href="/dashboard/users/add/"> ADD</a>
            </button>
        </li>
    </div>
</div>
<div class="datatable-container">
    <table id="users-table" class="datatable">

        <thead>

            <tr id="table-header" class="">
                <th>STATUS</th>
                <th data-priority="1">ID</th>
                <th data-priority="2">USERNAME</th>
                <th data-priority="3">FULL NAME</th>
                <th data-priority="4">EMAIL</th>
                <th data-priority="5">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td><span class="{{status}}"></span></td>
                <td>
                    {{id}}
                </td>
                <td>
                    {{username}}
                </td>
                <td>
                    {{fullname}}
                </td>
                <td>
                    {{email}}
                </td>
                <td>
                    <div class="header-tools">
                        <div class="tools">
                            <ul>
                                <li>
                                    <button data-bs-toggle="modal" data-bs-target="#">
                                        <a class="material-icons" href="/dashboard/users/edit/{{id}}">edit</a>
                                    </button>
                                </li>
                                <li>
                                    <button>
                                        <a class="material-icons " href="/dashboard/users/delete/{{id}}">delete</a>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

